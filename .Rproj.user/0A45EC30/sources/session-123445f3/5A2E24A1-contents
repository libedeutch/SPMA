\name{bayes_bic_spma}
\alias{bayes_bic_spma}
\title{bayes_bic_spma}
\description{
Calculate modified BIC for SPMA models with different penalty parameter \eqn{\lambda}
}
\usage{
bayes_bic_spma(thetaF, thetahat, covF1, covF2, covF3, N, p)
}
\arguments{
\item{thetaF}{unpenalized estimated coefficients.}
\item{thetahat}{estimated coefficents from SPMA.}
\item{covF1, covF2, covF3}{covariance matrix of unpenalized estimated coefficients in study 1,2,3.}
\item{N}{the sample size vector of three studies.}
\item{p}{the number of covariates.}
}
\examples{loading}

